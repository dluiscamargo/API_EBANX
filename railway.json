{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "echo 'Building PHP application'"
  },
  "deploy": {
    "startCommand": "php -S 0.0.0.0:$PORT api/index.php",
    "healthcheckPath": "/balance?account_id=test",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
} 